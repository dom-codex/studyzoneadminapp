<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8">

        <TextView
            android:id="@+id/s_n"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/dp12"
            android:background="@drawable/round_red_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2" />

        <TextView
            android:id="@+id/faculty_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/s_n"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/s_n"
            app:layout_constraintTop_toTopOf="@+id/s_n"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Engineering" />

        <TextView
            android:id="@+id/faculty_created_at_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/created_at"
            android:textSize="@dimen/sp16"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/faculty_created_at"
            app:layout_constraintStart_toStartOf="@+id/faculty_name"
            app:layout_constraintTop_toTopOf="@+id/faculty_created_at" />

        <TextView
            android:id="@+id/faculty_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:textSize="@dimen/sp16"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/faculty_created_at_label"
            app:layout_constraintTop_toBottomOf="@+id/faculty_name"
            tools:text="2021-12-21" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="@dimen/dp8"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/s_n" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>