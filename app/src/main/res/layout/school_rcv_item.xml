<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sch_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp12"
        android:background="#F4F3F3"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8">

        <ImageView
            android:id="@+id/sch_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp8"
            app:layout_constraintBottom_toBottomOf="@+id/sch_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sch_name"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/ic_baseline_school_24"
            app:tint="@color/bg_jumbo" />

        <TextView
            android:id="@+id/sch_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:textSize="@dimen/sp20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sch_img"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Federal university of petroleum resources effurun" />

        <TextView
            android:id="@+id/sch_abbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp18"
            app:layout_constraintStart_toStartOf="@+id/sch_name"
            app:layout_constraintTop_toBottomOf="@+id/sch_name"
            tools:text="fupre" />

        <TextView
            android:id="@+id/created_at_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp8"
            android:text="@string/created_at"
            android:textSize="@dimen/sp16"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/created_at"
            app:layout_constraintEnd_toStartOf="@+id/created_at"
            app:layout_constraintTop_toTopOf="@+id/created_at"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sch_name"
            tools:text="2021-08-21" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>